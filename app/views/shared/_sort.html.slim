.container.my-3
  ul class="nav nav-tabs"
    li class="nav-item"
      = link_to 'All', root_path(search: params[:search], sort: params[:sort]), class: class_string('nav-link', 'active': params[:upcoming].blank? && params[:past].blank?)
    li class="nav-item"
      = link_to 'Upcoming', root_path(upcoming: true, search: params[:search], sort: params[:sort]), class: class_string('nav-link', 'active': params[:upcoming].present?)
    li class="nav-item"
      = link_to 'Past', root_path(past: true, search: params[:search], sort: params[:sort]), class: class_string('nav-link', 'active': params[:past].present?)
    li class="nav-item ml-auto"
      div class="dropdown"
      button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" Сортировать
      div class="dropdown-menu" aria-labelledby="dropdownMenuButton"
        = link_to 'Дата: по убыванию', root_path(sort: 'date_descending', search: params[:search], upcoming: params[:upcoming], past: params[:past]), class: "dropdown-item small"
        = link_to 'Дата: по возрастанию', root_path(sort: 'date_ascending', search: params[:search], upcoming: params[:upcoming], past: params[:past]), class: "dropdown-item small"
        = link_to 'Самые последние', root_path(sort: 'recent', search: params[:search], upcoming: params[:upcoming], past: params[:past]), class: "dropdown-item small"
