footer.footer
  .container
    .footer__inner
      .footer__legal
        = image_tag "logo.png", class: "img-fluid", width: '64px'
        .text-muted.mt-2
          |
            &copy;
            &nbsp;
          = "#{Time.zone.now.year} #{meta_product_name}. #{t('.all_rights_reserved')}."
      .footer__links
        nav
          - Page.included_in_footer.each do |p|
            = link_to p.title, "/#{p.slug}", class: 'footer__link'
